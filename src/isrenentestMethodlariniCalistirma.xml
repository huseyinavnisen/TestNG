<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="İstenen Methodu Çalıştır">
    <test name="Facebook Test">
        <classes>

            <class name="tests.Day18_POM.C01_Facebook_Test">
                <methods>
                    <include name="test1"/>
                    <!-- sadece "include" içine yazılan "test" çalışır-->
                </methods>
            </class>
            <class name="tests.Day18_POM.C01_Facebook_Test">
                <methods>
                    <exclude name="test1"/>
                    <!-- "exclude" içine yazılan "test" hariç diğer tüm methodlar çalışır.-->
                </methods>
            </class>
        </classes>
    </test>
</suite>